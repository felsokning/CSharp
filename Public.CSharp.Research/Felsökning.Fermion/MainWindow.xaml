                <Expander x:Name="CounterSelector" Header="Select Counter Set" ExpandDirection="Down" Background="#ADAFB2" Foreground="White" BorderThickness="0" Collapsed="CounterSelector_Collapsed_1">
                    <StackPanel Height="Auto">
                        <CheckBox Margin="4" x:Name="E15_Cafe" Content="Exchange 2013 Client Access Server" Background="White" Foreground="White"/>
                        <CheckBox Margin="4" x:Name="E15_BackEnd" Content="Exchange 2013 Mailbox" Background="White" Foreground="White"/>
                        <CheckBox Margin="4" x:Name="E14" Content="Exchange 2010" Background="White" Foreground="White" IsChecked="True"/>
