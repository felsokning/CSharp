            <TextBlock x:Name="Row14Value" HorizontalAlignment="Right" TextWrapping="NoWrap" VerticalAlignment="Center" FontFamily="Segoe UI" FontSize="14" Grid.Row="14" Grid.Column="2" Opacity="100" Foreground="White"/>
            <TextBlock x:Name="Row15Title" HorizontalAlignment="Left" TextWrapping="NoWrap" VerticalAlignment="Center" FontFamily="Segoe UI" FontSize="14" Grid.Row="15" Grid.Column="1" Opacity="100" Foreground="White"/>
            <TextBlock x:Name="Row15Value" HorizontalAlignment="Right" TextWrapping="NoWrap" VerticalAlignment="Center" FontFamily="Segoe UI" FontSize="14" Grid.Row="15" Grid.Column="2" Opacity="100" Foreground="White"/>
