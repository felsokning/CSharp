            </Grid.ColumnDefinitions>
            <Grid Grid.Row="0" Grid.ColumnSpan="4" x:Name="TitleBar" Background="#002050" MouseDown="TitleBar_MouseDown_1" Opacity="1000"/>
            <Grid x:Name="Body" Grid.Row="2" Grid.ColumnSpan="4" Grid.RowSpan="19" Background="#2b2b2b" Opacity="0.7" />
            <TextBlock x:Name="ProgName" HorizontalAlignment="Left" TextWrapping="NoWrap" VerticalAlignment="Center" FontFamily="Segoe UI" FontSize="14" FontStyle="Italic" Grid.Row="0" Grid.Column="1" Opacity="100" Foreground="White"/>
            <Button x:Name="SystemName" HorizontalAlignment="Right" VerticalAlignment="Center" FontFamily="Segoe UI" FontSize="14" Grid.Row="0" Grid.Column="2" Opacity="100" Background="Transparent" Foreground="White" Width="310" BorderBrush="Transparent" Click="SystemName_Click_1"/>
            <TextBox x:Name="SystemChange" HorizontalAlignment="Right" VerticalAlignment="Center" FontFamily="Segoe UI" FontSize="14" Grid.Row="0" Grid.Column="2" Opacity="100" Background="White" Foreground="Gray" BorderBrush="Transparent" Width="310" KeyDown="SystemChange_KeyDown_1"/>
            <TextBlock x:Name="Row2Title" HorizontalAlignment="Left" TextWrapping="NoWrap" VerticalAlignment="Center" FontFamily="Segoe UI" FontSize="14" Grid.Row="2" Grid.Column="1" Opacity="100" Foreground="White"/>
            <TextBlock x:Name="Row2Value" HorizontalAlignment="Right" TextWrapping="NoWrap" VerticalAlignment="Center" FontFamily="Segoe UI" FontSize="14" Grid.Row="2" Grid.Column="2" Opacity="100" Foreground="White"/>
