            <TextBlock x:Name="Row9Title" HorizontalAlignment="Left" TextWrapping="NoWrap" VerticalAlignment="Center" FontFamily="Segoe UI" FontSize="14" Grid.Row="9" Grid.Column="1" Opacity="100" Foreground="White" />
            <TextBlock x:Name="Row9Value" HorizontalAlignment="Right" TextWrapping="NoWrap" VerticalAlignment="Center" FontFamily="Segoe UI" FontSize="14" Grid.Row="9" Grid.Column="2" Opacity="100" Foreground="White"/>
            <TextBlock x:Name="Row10Title" HorizontalAlignment="Left" TextWrapping="NoWrap" VerticalAlignment="Center" FontFamily="Segoe UI" FontSize="14" Grid.Row="10" Grid.Column="1" Opacity="100" Foreground="White" />
            <TextBlock x:Name="Row10Value" HorizontalAlignment="Right" TextWrapping="NoWrap" VerticalAlignment="Center" FontFamily="Segoe UI" FontSize="14" Grid.Row="10" Grid.Column="2" Opacity="100" Foreground="White"/>
