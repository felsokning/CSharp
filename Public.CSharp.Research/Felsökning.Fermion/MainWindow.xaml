            <TextBlock x:Name="Row11Value" HorizontalAlignment="Right" TextWrapping="NoWrap" VerticalAlignment="Center" FontFamily="Segoe UI" FontSize="14" Grid.Row="11" Grid.Column="2" Opacity="100" Foreground="White"/>
