<Window x:Class="Felsökning.Fermion.ErrorsScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ErrorzSkreen" Height="600" Width="800" Background="#2b2b2b" 
        Foreground="Transparent" AllowsTransparency="True" WindowStyle="None" Icon="Bio2.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <TextBlock Name="zeErrorBody" Foreground="AntiqueWhite" Height="20" Grid.Row="0"/>
        <TextBlock Name="zeErrorStack" Foreground="AntiqueWhite" Grid.Row="1" />
        <TextBlock Name="zeErrorData" Foreground="AntiqueWhite" Grid.Row="2" />
        <TextBlock Name="CSB" Foreground="AntiqueWhite" Grid.Row="3" HorizontalAlignment="Right" MouseEnter="CSB_MouseEnter_1" MouseLeftButtonDown="CSB_MouseLeftButtonDown_1" MouseLeave="CSB_MouseLeave_1"/>
    </Grid>
</Window>